{
  "include": [
    "env.d.ts",
    "src/**/*",
    "src/**/*.vue",
    "pages/**/*.vue",
    "test/**/*.spec.ts",
    "infra/**/*",
    "*"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "vitest.config.ts",
    "src/**/__tests__/*"
  ],
  "compilerOptions": {
    "composite": true,
    "tsBuildInfoFile": "./node_modules/.tmp/tsconfig.app.tsbuildinfo",
    "baseUrl": ".",
    "paths": {
      "@/*": [
        "./*"
      ]
    }
  }
}
